{{!-- Setup the index.handlebars to have the template that Handlebars can render onto. --}}
<div class="container bg-warning p-3 rounded text-center">
      <img src= "assets/images/burger_img.jpg" class= "burger-img mt-3 rounded"/>
		<h1>Eat Da Burger</h1>
  
     <div class= "row">
       <div class= "col-md-6">
        <div class="card bg-success">
            <div class="list-group-item text-center rounded m-3 p-3 bg-warning h2 text-danger ">NEW BURGERS</div>
            <div class= "row">
              {{#each burgers}}
              {{#unless devoured}}
              <div class= "col-md-9">
               <li class="list-group-item rounded m-3 p-3 text-center">{{this.burger_name}}</li>
              </div>
              <div class="col-md-3">
            <button class="btn-danger rounded m-3 p-2 text-center" data-id="{{this.id}}" >Devour Me</button>
              </div>
              {{/unless }}
              {{/each}}
              </div>
            
          </div>
        </div>
        <div class= "col-md-6">
          <div class="card bg-success">
            <div class="h2 text-danger rounded m-3 p-3 list-group-item text-center bg-warning">
              DEVOURED
            </div>
            <div class="row">
              {{#each burgers}}
              {{#if devoured}}
              <div class="col-12">
                <li class="list-group-item rounded m-3 p-3 text-center" data-id ="{{this.id}}">{{this.burger_name}}</li>
              </div>
              {{/if}}
              {{/each}}
            </div>
       </div>
       

      </div>
       </div>
     </div>
     <div class="container mt-3 mb-3">
       <div class= row>
         <div class="col-12">
           <div class="card rounded">
            <div class="row">
              <div class="col-12">
                <div class="list-group-item bg-danger rounded m-3 p-3 text-center text-light h2">
                  CREATE A NEW BURGER
                </div>
              </div>
              <form class="row" id= "create-burger">
                
                <div class= "col-md-6 offset-md-3">
                  
                 
              <input type="text" class="form-control m-1 bg-light" id="new-burger" name= "name"placeholder="Enter the name of the burger you want to create" >
                  
                </div>
                <div class="col-md-3">
                 <button class="btn-success rounded m-1 p-1" type="submit" id= "submitBtn">SUBMIT</button>
                </div>
                </form>
              </div>
             
            </div>
           </div>
         </div>
       </div>
     </div>